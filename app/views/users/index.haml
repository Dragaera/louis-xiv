.page-header
  %h1
    Louis XIV
    %small User

%a{ href: url(:users, :new) }
  %span.glyphicon.glyphicon-plus

%table.table
  %thead
    %tr
      %th User
      %th Last Used
      %th Active

  %tbody
    - @users.each do |user|
      %tr
        %td= link_to "#{ user.user }", url(:users, :show, id: user.id)
        %td= pretty_print_date(user.used_at, ago: true, alt: '(never)')
        %td
          - if user.active
            %span.glyphicon.glyphicon-ok
          - else
            %span.glyphicon.glyphicon-remove
