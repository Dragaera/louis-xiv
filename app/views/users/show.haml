.page-header
  %h1
    Louis XIV User
    %small
      = @user.user

    - if @user.active?
      %span.label.label-success
        Active
    - else
      %span.label.label-default
        Inactive

.row
  .col-md-6
    %a.btn.btn-primary{ href: url(:users, :edit, id: @user.id) }
      Edit
      %span.glyphicon.glyphicon-edit

    = form_tag url(:users, :delete, id: @user.id), method: 'post', class: 'btn' do
      = submit_tag 'Delete', class: 'btn btn-danger'

.row
  .col-md-6
    %h2 Details
    %table.table.table-bordered
      %tbody
        %tr
          %td Used at
          %td= pretty_print_date(@user.used_at, ago: true, alt: '(never)')
