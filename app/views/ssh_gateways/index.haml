.page-header
  %h1
    SSH
    %small Gateway

%a{ href: url(:ssh_gateways, :new) }
  %span.glyphicon.glyphicon-plus

%table.table
  %thead
    %tr
      %th Gateway
      %th SSH User
      %th Active

  %tbody
    - @ssh_gateways.each do |gateway|
      %tr
        %td= link_to "#{ gateway.name }", url(:ssh_gateways, :show, id: gateway.id)
        %td= gateway.ssh_user.name
        %td
          - if gateway.active
            %span.glyphicon.glyphicon-ok
          - else
            %span.glyphicon.glyphicon-remove
